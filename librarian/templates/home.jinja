{% extends "main.jinja" %}
{% block title %}Home{% endblock %}

{% block body %}
<div class="search-block">
    <div class="row search-row">
        <div class="col-md-3"></div>
        <div class="col-md-6 search-col">
            <span class="home-logo">
                <img src="/static/images/librarian.png">
            </span>
            <br>
            <br>
            <form method="GET" action="/search">
                <div class="input-group input-group-lg" style="width: 100%">
                    {{
                        form.q(class="search searchbox form-control",
                        placeholder="Find by title, author, or publisher")
                    }}
                    <span class="input-group-btn">
                        <input type="submit" class="search btn btn-primary" value="Search">
                    </span>
                </div>
            </form>
            <br>
            <p class="log-in-prompt">
                An actual Librarian? <a href="/login">Log-in here.</a>
            </p>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
{% endblock %}
