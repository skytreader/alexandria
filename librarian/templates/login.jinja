{% extends "main.jinja" %}
{% block title %}Log-in{% endblock %}
{% block content %}
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <h1>Log-in</h1>
        {% for message in get_flashed_messages() %}
            {{ message }}
        {% endfor %}
        <form method="POST" action="/login/" role="form">
            <div class="input-group input-group-lg" style="width: 100%;">
                {{ form.csrf_token }}
                Username:<br>
                {{ form.librarian_username(autofocus="", placeholder="Username", class="form-control") }}<br>
                Passphrase:<br>
                {{ form.librarian_password(placeholder="Passphrase", class="form-control") }}<br>
                <input type="submit" value="Log-in" class="form-control btn btn-primary">
                <input type="hidden" class="form-control">
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
{% endblock %}
