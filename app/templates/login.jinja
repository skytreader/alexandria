{% extends "main.jinja" %}
{% block title %}Log-in{% endblock %}
{% block content %}
    {{ get_flashed_messages() }}
    <form method="POST" action="." role="form">
        Username:<br>
        {{ form.username(autofocus="", placeholder="Username") }}<br>
        Password:<br>
        {{ form.password(placeholder="Password") }}<br>
        <input type="submit" value="Log-in">
    </form>
{% endblock %}
